# Environment variables para Railway
# Copiar y configurar en Railway Dashboard

# App Configuration
APP_NAME="LitoPro 3.0"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://tu-dominio.railway.app
APP_KEY=base64:GENERAR_CON_php_artisan_key:generate

# Proxy & HTTPS Configuration (Railway)
ASSET_URL=https://tu-dominio.railway.app
MIX_ASSET_URL=https://tu-dominio.railway.app
FORCE_HTTPS=true

# Database (Railway MySQL)
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Cache & Sessions (usar database para Railway)
CACHE_STORE=database
SESSION_DRIVER=database
SESSION_LIFETIME=120
QUEUE_CONNECTION=database

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Mail (configurar según necesidad)
MAIL_MAILER=log

# Filament Configuration
FILAMENT_DOMAIN=tu-dominio.railway.app

# Vite Configuration (crítico para Railway)
VITE_APP_NAME="${APP_NAME}"

# Performance Settings
OPCACHE_ENABLE=1
OPCACHE_REVALIDATE_FREQ=0
OPCACHE_VALIDATE_TIMESTAMPS=0
OPCACHE_MAX_ACCELERATED_FILES=20000
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_MAX_WASTED_PERCENTAGE=10