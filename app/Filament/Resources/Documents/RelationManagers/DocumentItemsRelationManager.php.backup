                                    // Crear la relaci√≥n MagazinePage
                                    \App\Models\MagazinePage::create([
                                        'magazine_item_id' => $magazine->id,
                                        'simple_item_id' => $simpleItem->id,
                                        'page_type' => $pageData['page_type'],
                                        'page_order' => $pageData['page_order'] ?? 1,
                                        'page_quantity' => $pageData['page_quantity'],
                                        'page_notes' => $pageData['page_description'] ?? null,
                                    ]);
                                }
                            }
                            
                            // Recalcular precios del magazine despu√©s de agregar p√°ginas
                            $magazine->refresh();
                            $magazine->calculateAll();
                            
                            // Configurar datos para DocumentItem
                            $data = [
                                'itemable_type' => 'App\\Models\\MagazineItem',
                                'itemable_id' => $magazine->id,
                                'description' => 'Revista: ' . $magazine->description . ' (' . $magazine->pages->sum('page_quantity') . ' p√°ginas)',
