# ============================================
# GRAFIRED 3.0 - ENVIRONMENT CONFIGURATION
# ============================================

# Application
APP_NAME="GrafiRed"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Localization (IMPORTANT: Set to 'es' for Spanish)
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_CO

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (MySQL recommended for production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=grafired
DB_USERNAME=root
DB_PASSWORD=

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache
CACHE_STORE=database

# Redis (optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# EMAIL CONFIGURATION (RESEND - PRODUCTION)
# ============================================
MAIL_MAILER=resend
RESEND_API_KEY=
MAIL_FROM_ADDRESS="noreply@grafired.com"
MAIL_FROM_NAME="${APP_NAME}"

# For testing with Mailtrap (comment out Resend above)
# MAIL_MAILER=smtp
# MAIL_HOST=sandbox.smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_ENCRYPTION=tls

# ============================================
# STRIPE PAYMENT CONFIGURATION (PRODUCTION)
# ============================================
STRIPE_KEY=pk_test_
STRIPE_SECRET=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# For production, use:
# STRIPE_KEY=pk_live_
# STRIPE_SECRET=sk_live_
# STRIPE_WEBHOOK_SECRET=whsec_

# ============================================
# MULTI-TENANCY CONFIGURATION
# ============================================
# Current tenant ID (for testing, usually set dynamically)
APP_CURRENT_TENANT_ID=

# ============================================
# FILAMENT CONFIGURATION
# ============================================
FILAMENT_THEME=grafired

# ============================================
# AWS S3 (Optional for file storage)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# VITE (Frontend Build)
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# SOCIAL MEDIA (Optional)
# ============================================
# Facebook App ID for social login
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================
# Sentry for error tracking
SENTRY_LARAVEL_DSN=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# ============================================
# NOTES FOR PRODUCTION DEPLOYMENT
# ============================================
# 1. Set APP_ENV=production
# 2. Set APP_DEBUG=false
# 3. Generate new APP_KEY with: php artisan key:generate
# 4. Use MySQL instead of SQLite
# 5. Configure Resend for emails (RESEND_API_KEY)
# 6. Configure Stripe with live keys (pk_live_, sk_live_)
# 7. Set up proper database backups
# 8. Enable SSL/HTTPS
# 9. Configure proper SESSION_DOMAIN
# 10. Set strong DB_PASSWORD
# 11. Run: php artisan db:seed --class=MinimalProductionSeeder
# 12. Change super admin password immediately after first login
